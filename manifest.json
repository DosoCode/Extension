{
  "name": "Digital Literacy toolkit",
  "description": "Gives guided tutorial for gmail",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab","tabs"],
  "action": {
    "default_popup": "help_popup.html",
    "default_icon": "Help_image.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/", "https://mail.google.com/*", "https://www.zoom.com/", "https://www.zoom.us/"],
      "js": ["contentScript.js"]
    }
  ]

}

