{
  "name": "Digital Literacy toolkit",
  "description": "Gives guided tutorial for gmail",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "help_popup.html",
    "default_icon": "Help_image.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dimensions.css", "tutorials/*.html", "images/*"],
      "matches": []
    }
  ]

}

